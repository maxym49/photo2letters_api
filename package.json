{
  "name": "photo2letters-api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node dist/app.js",
    "prestart": "npm run -s build",
    "dev": "nodemon -w src --exec babel-node ./src/bin/www",
    "build": "rimraf ./dist && babel src -d ./dist",
    "test": "jest",
    "lint": "eslint 'src/**/*.js' --fix",
    "format": "prettier-eslint 'server/**/*.{js,json}' --write"
  },
  "lint-staged": {
    "*.js": [
      "prettier-eslint --write",
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^8.1.0",
    "express": "~4.16.1",
    "lint-staged": "^9.2.5",
    "mongoose": "^5.7.1",
    "morgan": "~1.9.1",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.0",
    "@babel/core": "^7.6.0",
    "@babel/node": "^7.6.1",
    "@babel/preset-env": "^7.6.0",
    "@babel/register": "^7.6.0",
    "eslint": "^6.4.0",
    "husky": "^3.0.5",
    "nodemon": "^1.19.2",
    "prettier-eslint-cli": "^5.0.0"
  }
}
